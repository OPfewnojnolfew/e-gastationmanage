{
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": 2,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "quotes": [2, "single", "avoid-escape"],
        "no-unused-expressions": [2, {
            allowShortCircuit: true,
            allowTernary: true
        }],
        "no-unused-vars": [2, {
            "vars": "all",
            "args": "after-used",
            "ecmaFeatures": {
                jsx: true
            }
        }],
        "camelcase": 2,
        "curly": 2,
        "no-alert": 2,
        "react/jsx-uses-vars": 1
    }
}
